<body>

<% include ../partials/menu-logged-out.ejs %>

<div tabindex="-1" id="content" class="site-header" style="margin-bottom: 60px">
    <div class="container">
        <h1 >Technology radar</h1>
        <p>Community technology planning</p>
    </div>
</div>

<div class="container bs-docs-container">

    <row>
        <div class="col-md-4 col-md-offset-4" >
            <form action="javascript:void(0);">
                <h3 class="form-signin-heading">Retrieve password</h3>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" class="form-control" id="email"  name="email" placeholder="Email"
                           required maxlength="100">
                </div>

                <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
            </form>
        </div>
    </row>
</div>
<% include ../partials/footer.ejs %>

<script src="/shared/validators/userValidator.js"></script>
<script type="text/javascript" src="/utils.js" charset="utf-8"></script>

<script>

    $("form").submit(function(event) {

        var email = $("form [name=email]").val();

        var validationResult = UserValidator.validateEmail(email);
        if(!validationResult.valid) {
            alert(validationResult.message);
            return;
        }

        $(":submit").attr("disabled", true);
        var frm = $('form');
        var frmdata = serialiseForm(frm);

        $.ajax({
            type: "POST",
            url: '/api/user/generateresetcode',
            contentType: "application/json",
            data: JSON.stringify(frmdata),
            success: function(result) {

                if(result.success) {
                    alert("Reset code generated, check your e-mail.");
                } else {
                    alert("There was an error generating a reset code. " + JSON.stringify(result.error));
                }
                $(":submit").attr("disabled", false);
            }
        });

        <% if (google_id!=undefined) { %>
            ga('send', 'event', 'User', 'generateResetCode');
        <% } %>
    });
</script>

</body>
</html>
