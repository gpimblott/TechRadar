<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">

    <% include ../partials/head.ejs %>

    <link rel="stylesheet" href="/lib/bootstrap-table/bootstrap-table.min.css">

</head>

<body>

<% include ../partials/menu.ejs %>

<%
getBreadcrumb = function () {
    return encodeURI(technology.categoryname).toLowerCase();
}
%>

<% include ../partials/technology-head.ejs %>

<div class="container bs-docs-container" style="padding-top: 10px;">
    
    <div class="col-md-12">
        <ol class="breadcrumb" style="margin-bottom: 5px;">
            <li><a href="/">Home</a></li>
            <li><a href="/category/<%= getBreadcrumb() %>/technologies"><%= technology.categoryname %></a></li>
            <li><a href="/technology/<%= technology.id %>"><%= technology.name %></a></li>
            <li class="active">Users</li>
        </ol>

        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <table id="results"></table>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>

<script src="/lib/bootstrap-table/bootstrap-table.min.js"></script>
<script src="/stickyTablePageSize.js"></script>

<script>


$('#results').bootstrapTable({
    method: 'get',
    url: '/api/technology/<%= technology.id %>/users',
    search: true,
    cache: false,
    striped: true,
    escape: true,
    idField: 'id',
    showColumns: true,
    showRefresh: true,
    showExport: true,
    searchOnEnterKey: true,
    showPaginationSwitch: true,
    pagination: true,
    pageSize: page_size, // declared and set in stickyTablePageSize.js
    columns: [{
        field: 'displayname',
        title: 'Name',
        align: 'center',
        sortable: true
    }, {
        field: 'email',
        title: 'Email',
        align: 'center',
        sortable: true,
        formatter: emailFormatter
    }, {
        field: 'date',
        title: 'Date of last use',
        align: 'center',
        sortable: true
    },
    ]
})

function emailFormatter(value, row, index) {
    return [
        '<a href="mailto:' + value + '">' + value + '</a>'
    ].join('');
}

</script>
<script src="/comments.js"></script>
<script src="/avatar.js"></script>

</body>
</html>